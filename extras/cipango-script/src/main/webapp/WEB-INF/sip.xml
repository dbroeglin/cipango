<?xml version="1.0" encoding="UTF-8"?>
<sip-app xmlns="http://www.jcp.org/xml/ns/sipservlet" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.jcp.org/xml/ns/sipservlet http://www.jcp.org/xml/ns/sipservlet/sip-app_1_1.xsd"
	version="1.1">
	<app-name>org.cipango.script</app-name>
	<display-name>Cipango Script</display-name>

    <context-param>
        <param-name>org.cipango.sipatra.script.path</param-name>
        <param-value>scripts</param-value>
    </context-param>

    <servlet>
        <servlet-name>sipatra</servlet-name>
        <servlet-class>org.cipango.sipatra.SipatraServlet</servlet-class>
        <load-on-startup/>
    </servlet>
</sip-app>