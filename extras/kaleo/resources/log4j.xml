  <!-- categories -->

  <category name="org.cipango.kaleo.xcap.XcapService">
    <priority value="info"/>
  </category>
  
  <category name="org.cipango.kaleo">
    <param name="additivity" value="false"/>
    <priority value="debug"/>
    <appender-ref ref="console"/>
  </category>
  
  <root>
    <priority value="debug"/>
    <appender-ref ref="console"/>
  </root>

