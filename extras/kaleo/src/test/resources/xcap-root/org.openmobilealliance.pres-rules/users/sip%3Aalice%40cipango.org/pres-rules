  <cr:rule id="wp_prs_allow_own">
    <cr:conditions>
      <cr:identity>
        <cr:one id="sip:alice@cipango.org"/>
      </cr:identity>
    </cr:conditions>
    <cr:actions>
      <sub-handling>allow</sub-handling>
    </cr:actions>
    <cr:transformations>
      <provide-services>
        <all-services/>
      </provide-services>
      <provide-persons>
        <all-persons/>
      </provide-persons>
      <provide-all-attributes/>
      <provide-devices>
        <all-devices/>
      </provide-devices>
    </cr:transformations>
  </cr:rule>
